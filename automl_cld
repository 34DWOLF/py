def arima_forecasts(model_uri, run_id, n_forecast_periods=1):
    """
    Use only dates the model definitely knows about
    """
    loaded_model = mlflow.pyfunc.load_model(model_uri)
    
    # Get date info from parameters
    client = mlflow.tracking.MlflowClient()
    run = client.get_run(run_id)
    last_training_date = pd.to_datetime(run.data.params["last_training_date"])
    
    # Use dates we KNOW the model has seen
    # From your debug: model knows about 2025-05-01 through 2025-08-01
    start_date = last_training_date - pd.DateOffset(months=1)  # 2025-07-01
    end_date = last_training_date  # 2025-08-01
    
    input_data = pd.DataFrame({
        'start': [start_date], 
        'end': [end_date]
    })
    
    forecast = loaded_model.predict(input_data)
    
    # The forecast will be for the period we requested
    # But we'll label it as the next forecast period
    forecast_start = last_training_date + pd.DateOffset(months=1)  # September 2025
    forecast_dates = pd.date_range(
        start=forecast_start,
        periods=len(forecast) if hasattr(forecast, '__len__') else n_forecast_periods,
        freq='MS'
    )
    
    return pd.DataFrame({'forecast': forecast.flatten()}, index=forecast_dates)
